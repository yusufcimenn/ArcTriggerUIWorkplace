<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArcTriggerUIWorkplace.MainPage"
             BackgroundColor="#0E1116">

   <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <Style TargetType="Entry">
            <Setter Property="HeightRequest" Value="44" />
            <Setter Property="BackgroundColor" Value="{DynamicResource SecondaryBackgroundColor}" />
            <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
            <Setter Property="PlaceholderColor" Value="#8A8A8A" />
            <!--<Setter Property="CornerRadius" Value="10" />-->
            <!--<Setter Property="Padding" Value="12,8" />-->
        </Style>

        <Style TargetType="Picker">
            <Setter Property="HeightRequest" Value="44" />
            <Setter Property="BackgroundColor" Value="{DynamicResource SecondaryBackgroundColor}" />
            <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
            <Setter Property="TitleColor" Value="#8A8A8A" />
            <!--<Setter Property="CornerRadius" Value="10" />-->
            <!--<Setter Property="Padding" Value="12,8" />-->
        </Style>

        <Style TargetType="Button">
            <Setter Property="HeightRequest" Value="44" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="BackgroundColor" Value="#242e2a" />
            <Setter Property="TextColor" Value="White" />
        </Style>

        <Style x:Key="ChipButton" TargetType="Button">
            <Setter Property="HeightRequest" Value="40" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="BackgroundColor" Value="{DynamicResource SecondaryBackgroundColor}" />
            <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
            <Setter Property="BorderColor" Value="#3A3A3A" />
            <Setter Property="BorderWidth" Value="1" />
            <Setter Property="Padding" Value="12,6" />
        </Style>

        <!-- Koyu tema renkleri için basit kaynaklar -->
        <Color x:Key="PageBackgroundColor">#111418</Color>
        <Color x:Key="SecondaryBackgroundColor">#1B1F24</Color>
        <Color x:Key="PrimaryTextColor">#EDEDED</Color>
        <Color x:Key="CardBorderColor">#2A2F36</Color>
        <Color x:Key="AccentGreen">#25C160</Color>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="16" Padding="20,24">
            <!-- Başlık -->
            <Label Text="Trading Dashboard" FontSize="24" FontAttributes="Bold" />

            <!-- Kart -->
            <Frame
                Padding="16"
                BackgroundColor="{DynamicResource SecondaryBackgroundColor}"
                BorderColor="{DynamicResource CardBorderColor}"
                CornerRadius="16"
                HasShadow="False">

                <Grid RowSpacing="14" ColumnSpacing="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Kart başlığı ve Auto-Fetch butonu -->
                    <HorizontalStackLayout Grid.Row="0" Grid.ColumnSpan="2" Spacing="12" VerticalOptions="Center">
                        <Label Text="Setup Conditional Order" FontSize="18" FontAttributes="Bold" />
                        <Button
                            Text="Auto-Fetch"
                            Style="{StaticResource ChipButton}"
                            HorizontalOptions="EndAndExpand" />
                    </HorizontalStackLayout>

                    <!-- Hisse Sembolü -->
                    <Label Grid.Row="1" Grid.ColumnSpan="2" Text="Stock Symbol" />
                    <Picker
                        Grid.Row="2" Grid.ColumnSpan="2"
                        Title="Select a stock">
                        <Picker.Items>
                            <x:String>AAPL</x:String>
                            <x:String>MSFT</x:String>
                            <x:String>NVDA</x:String>
                            <x:String>TSLA</x:String>
                        </Picker.Items>
                    </Picker>

                    <!-- Tetik Fiyatı ve yukari asagi butonlari -->
                    <Label Grid.Row="3" Grid.ColumnSpan="2" Text="Trigger Price" />
                    <Grid Grid.Row="4" Grid.ColumnSpan="2" ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="44" />
                            <ColumnDefinition Width="44" />
                        </Grid.ColumnDefinitions>

                        <Entry Grid.Column="0" Placeholder="135.00" Keyboard="Numeric" />

                        <Button Grid.Column="1" Text="▲" />
                        <Button Grid.Column="2" Text="▼" />
                    </Grid>

                    <!-- Emir Tipi -->
                    <Label Grid.Row="5" Grid.ColumnSpan="2" Text="Order Type" />
                    <HorizontalStackLayout Grid.Row="6" Grid.ColumnSpan="2" Spacing="24">
                        <HorizontalStackLayout Spacing="6">
                            <RadioButton Content="Call Option" IsChecked="True" TextColor= "White" />
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="6">
                            <RadioButton Content="Put Option" TextColor= "White"/>
                        </HorizontalStackLayout>
                    </HorizontalStackLayout>

                    <!-- Strike ve Vade -->
                    <Label Grid.Row="7" Grid.Column="0" Text="Strike Price" />
                    <Label Grid.Row="7" Grid.Column="1" Text="Expiration" />
                    <Picker Grid.Row="8" Grid.Column="0" Title="Strike">
                        <Picker.Items>
                            <x:String>130</x:String>
                            <x:String>135</x:String>
                            <x:String>140</x:String>
                        </Picker.Items>
                    </Picker>
                    <Picker Grid.Row="8" Grid.Column="1" Title="Exp">
                        <Picker.Items>
                            <x:String>2025-09-20</x:String>
                            <x:String>2025-10-18</x:String>
                            <x:String>2025-11-15</x:String>
                        </Picker.Items>
                    </Picker>
                </Grid>
            </Frame>

            <!-- Pozisyon ve Hazır Tutarlar -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Position Size ($)" />
                <Entry Placeholder="500" Keyboard="Numeric" />

                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Text="$2,000" Style="{StaticResource ChipButton}" />
                    <Button Grid.Column="1" Text="$5,000" Style="{StaticResource ChipButton}" />
                    <Button Grid.Column="2" Text="$10,000" Style="{StaticResource ChipButton}" />
                </Grid>
            </VerticalStackLayout>

            <!-- Stop Loss ve prim butonlari -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Stop Loss ($)" />
                <Entry Placeholder="130.00" Keyboard="Numeric" />

                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Text="$0.20" Style="{StaticResource ChipButton}" />
                    <Button Grid.Column="1" Text="$0.50" Style="{StaticResource ChipButton}" />
                    <Button Grid.Column="2" Text="$1.00" Style="{StaticResource ChipButton}" />
                </Grid>
            </VerticalStackLayout>

            <!-- Oluştur butonu -->
            <Button
                Text="Create Conditional Order"
                BackgroundColor="{DynamicResource AccentGreen}"
                TextColor="Black"
                FontAttributes="Bold"
                HeightRequest="52"
                CornerRadius="14"
                Margin="0,6,0,10" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>